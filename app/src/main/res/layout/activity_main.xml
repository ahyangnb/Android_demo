<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:replace="android:appComponentFactory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="判断应用是否安装" />

        <Button
            android:id="@+id/bt_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="webView" />

        <Button
            android:id="@+id/bt_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改Theme"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_themeTow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改ThemeTow"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="constraint" />

        <Button
            android:id="@+id/bt_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dialog" />

        <Button
            android:id="@+id/bt_this_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This_dialog" />

        <Button
            android:id="@+id/bt_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表视图和请求接口"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ProgressActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请求接口"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计时器"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncTask异步任务"
            android:textAllCaps="false" />

    </LinearLayout>


</ScrollView>